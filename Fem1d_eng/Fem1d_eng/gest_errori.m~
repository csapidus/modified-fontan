function gest_errori(n,dato)
%
%
% Gestore dei messaggi di errore
%
global AQUAMARINE
if n==1
   testo_err='The problem in ill-posed               ';
elseif n==2
   testo_err='Error in the definition of domain  (b<a)';
elseif n==3
   testo_err='Diffusion coefficent not valid              ';
elseif n==4
   testo_err='This case is still to be implemented ';
elseif n==5
   testo_err=['Trasport-dominated. Required  h<',dato,' Stab. autom.'];
elseif n==6
   testo_err=['Reaction-dominated. Required : h<',dato,' Stab. autom.'];
elseif n==7
   testo_err=['The value of theta is not valid          '];
elseif n==8
   testo_err=['Error in the definition of time interval        '];
elseif n==9
   testo_err=['Error in the definition of the time step  '];
end;
[figurePos]=pos_figure;
figurePos(2)=figurePos(2)-100;
%
% Crea la figura
father_err=figure('NumberTitle','off','Color',AQUAMARINE,...
   'Units','points',...
   'MenuBar','none','Name','Warning or Error message    ',...
   'Resize','off','Position',figurePos);
%
% Costruisce titolo, autori e release
cornici('no ');
uicontrol('Units','normalized',...
   'Position',[0 0.9 1 0.05],'HorizontalAlignment','center',...
   'Style','Text',...
   'String',...
   'ATTENTION  !!!',...
   'BackgroundColor',AQUAMARINE,...
   'ForegroundColor','red',...
   'FontAngle','oblique',...
   'FontWeight','bold','FontSize',[15]); 
uicontrol('Units','normalized',...
   'Position',[0 0.5 1 0.05],'HorizontalAlignment','center',...
   'Style','Text',...
   'String',...
   testo_err,...
   'BackgroundColor',AQUAMARINE,'FontAngle','oblique',...
   'FontWeight','demi','FontSize',[12]); 
uicontrol('Units','normalized',...
   'Position',[0.1 0.1 0.2 0.05],'HorizontalAlignment','left',...
   'Style','checkbox',...
   'String','OK','FontAngle','oblique',...
   'BackgroundColor',AQUAMARINE,...
   'FontWeight','demi','FontSize',[14],'CallBack',...
   'close;');