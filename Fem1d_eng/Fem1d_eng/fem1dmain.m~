%
%FEM1DMAIN 1-d finite element code.
%   FEM1DGUI is the graphical interface.
%
%   See also FEM1D.

%   Reference: A. Quarteroni, Modellistica Numerica 
%   per Problemi Differenziali, Springer-Italia, Milano
%   (2000).

%   Fausto Saleri, Alessandro Veneziani
%   $Revision: 1.1.1.1 $  $Date: 2001/03/09 08:22:48 $
clear all; close all;
global AQUAMARINE RELDATA CHOICE METODO
global CHOICE BC_DX BC_SX HMESH QUADRA SOLVER
global MODUS OMEGA FORMA BCVALUE FEMSYS GERBASE DER_CON
global USCITA AN_ERR INFO INITC THETA TIME DELTAT
global FATHER ON OFF SUPP
global MODELLI MODELS SERVICE LUMPING
global coord uh mat_fem coord_old uh_old stringa_uex stringa_uxex
global infl
%
% Inizializzazione di alcune variabili globali
%AQUAMARINE = [127/255 1 212/255]; 
AQUAMARINE = [10/255 110/255 12/255];
RELDATA = date;
%
% Variabili d'ambiente da non cancellare perche' richiamate in esecuzione
value='Value'; stringa='String'; visible='Visible'; ON = 'on'; OFF = 'off';
zero='0'; astra = '****';
uh_old=0;
coord_old=0;
stringa_uex=' ';
stringa_uxex=' ';
%
% Posiziona la figura
[figurePos]=pos_figure;
%
% Dichiara il pannello iniziale
FATHER(1)=figure('NumberTitle','off','Color',AQUAMARINE,'Units','points',...
   'MenuBar','none','Name','Fem 1D','Resize','off',...
   'Position',figurePos);
%
% Costruisce titolo, autori e release
cornici('yes');
%
% Costruisce i bottoni relativi ai problemi (pb_b)
pb_b(1)=uicontrol('Units','normalized',...
   'Position',[0.2 0.7 0.5 0.05],'HorizontalAlignment','left',...
   'BackgroundColor',AQUAMARINE,'Value',1,...
   'FontWeight','demi','FontSize',[12],...
   'Style','radiobutton','String','Elliptic','CallBack',...
   'set(pb_b(1),value,1);set(pb_b(2),value,0);set(pb_b(3),value,0);set(pb_b(4),value,0);set(esegui,value,0);'); 
pb_b(2)=uicontrol('Units','normalized',...
   'Position',[0.2 0.6 0.5 0.05],'HorizontalAlignment','left',...
   'BackgroundColor',AQUAMARINE,...
   'FontWeight','demi','FontSize',[12],...
   'Style','radiobutton','String','Parabolic','CallBack',...
   'set(pb_b(1),value,0);set(pb_b(2),value,1);set(pb_b(3),value,0);set(pb_b(4),value,0);set(esegui,value,0);');
pb_b(3)=uicontrol('Units','normalized',...
   'Position',[0.2 0.5 0.5 0.05],'HorizontalAlignment','left',...
   'BackgroundColor',AQUAMARINE,...
   'FontWeight','demi','FontSize',[12],...
   'Style','radiobutton','String','Hyperbolic','CallBack',...
   'set(pb_b(1),value,0);set(pb_b(2),value,0);set(pb_b(3),value,1);set(pb_b(4),value,0);set(esegui,value,0);');
pb_b(4)=uicontrol('Units','normalized',...
   'Position',[0.2 0.4 0.5 0.05],'HorizontalAlignment','left',...
   'BackgroundColor',AQUAMARINE,...
   'FontWeight','demi','FontSize',[12],...
   'Style','radiobutton','String','Model Problem','CallBack',...
   'set(pb_b(1),value,0);set(pb_b(2),value,0);set(pb_b(3),value,0);set(pb_b(4),value,1);set(esegui,value,0);');
%
% Definisce i nomi degli M-files associati ad ogni problema
pb_mfiles = struct('tipo',{' ','elliptic;','parabolic;',...
      'hyperbolic','model'});
%
% Crea il bottone di esecuzione
esegui=uicontrol('Units','normalized',...
   'Position',[0.1 0.2 0.25 0.08],'HorizontalAlignment','left',...
   'Style','PushButton',...
   'String','Go    ','FontAngle','oblique',...
   'BackgroundColor',AQUAMARINE,...
   'FontWeight','demi','FontSize',[14],'CallBack',...
   '[s]=radiosel(pb_b);name = pb_mfiles(s).tipo; eval(name);');

esci=uicontrol('Units','normalized',...
   'Position',[0.7 0.2 0.25 0.08],'HorizontalAlignment','left',...
   'Style','PushButton',...
   'String','Exit','FontAngle','oblique',...
   'BackgroundColor',AQUAMARINE,...
   'FontWeight','demi','FontSize',[14],'CallBack',...
   'close all; clear all;');
